<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".8">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="@string/title"
            android:background="@drawable/border"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:minLines="1"
            android:textSize="30dp"
            android:gravity="start"/>

        <ImageButton
            android:id="@+id/list_done_image_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/edit_text_title"
            android:layout_toRightOf="@+id/edit_text_title"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/border"
            app:layout_constraintStart_toEndOf="@+id/edit_text_title"
            app:srcCompat="@drawable/baseline_done_24"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_weight=".2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/edit_text_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textMultiLine"
            android:background="@drawable/border"
            android:minLines="1"
            android:maxLines="250"
            android:hint="@string/list"
            android:gravity="start"
            android:textSize="20dp"/>

    </RelativeLayout>


</androidx.appcompat.widget.LinearLayoutCompat>